<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <link rel="shortcut icon" href="{{ url_for('static', filename='favicon.png') }}">
  <title>{% block title %}{{ page_title|default(('Image Processing Demo')) }}{% endblock %}</title>
  <link rel="stylesheet" href="{{ url_for('static', filename='libs/bootstrap/css/bootstrap.min.css') }}">
  <script src="{{ url_for('static', filename='libs/jquery-1.11.3.min.js') }}"></script>
  <script src="{{ url_for('static', filename='libs/bootstrap/js/bootstrap.min.js') }}"></script>
</head>

<body>
<div id="wrap">
  {% include "nav.jinja" %}

  {% block fullcontent %}

  <div class="container">
    {% with messages = get_flashed_messages() %}
      {% if messages %}
        {% for message in messages %}
        <div class="alert alert-warning alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          {{ message }}
        </div>
        {% endfor %}
      {% endif %}
    {% endwith %}
    {# Body #}
    {% block content %}{% endblock %}
  </div>
  {% endblock %}

</div> <!-- /wrap -->

</body>
</html>
