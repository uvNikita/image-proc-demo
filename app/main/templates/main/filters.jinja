{% extends "base.jinja" %}
{% set page_title = 'Filters' %}

{% block content %}
  <form action="" method=post enctype=multipart/form-data id="filter_form">
      <select name="filter_type" form="filter_form">
        {% for filter in filters %}
          <option value="{{ filter.id }}">{{ filter.name }}</option>
        {% endfor %}
      </select>
      <input type="number" step="0.01" name="cutoff" value="{{ request.args.get('cutoff', 0) }}">
      <input type=submit value=Filter>
  </form>

  <div class="row">
    <div class="col-md-4">
      <figure>
        <img class="img-fluid plot" src="{{ get_image_url(type='ref') }}"/>
        <figcaption>Original</figcaption>
      </figure>
    </div>

    <div class="col-md-4">
      <figure>
        <img class="img-fluid plot" src="{{ get_image_url(type='filtered') }}"/>
        <figcaption>Filtered</figcaption>
      </figure>
    </div>
  </div>
{% endblock %}
