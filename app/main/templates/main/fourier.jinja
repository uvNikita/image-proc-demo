{% extends "base.jinja" %}
{% set page_title = 'Fourier Transform' %}

{% block content %}
  <h3>Fourier Transform</h3>
  <p>
  <form action="" method=post enctype=multipart/form-data>
    <p>
      <input type=submit value=Generate>
    </p>
  </form>
  </p>

  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <figure>
        <figcaption>Absolute</figcaption>
        <img class="img-fluid plot" src="{{ get_image_url(type='fft') }}"/>
      </figure>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <figure>
        <img class="img-fluid plot" src="{{ get_image_url(type='fft-phase') }}"/>
        <figcaption>Phase</figcaption>
      </figure>
    </div>

    <div class="col-md-4">
      <figure>
        <img class="img-fluid plot" src="{{ get_image_url(type='fft-real') }}"/>
        <figcaption>Real</figcaption>
      </figure>
    </div>

    <div class="col-md-4">
      <figure>
        <img class="img-fluid plot" src="{{ get_image_url(type='fft-imag') }}"/>
        <figcaption>Imaginary</figcaption>
      </figure>
    </div>
  </div>

{% endblock %}
