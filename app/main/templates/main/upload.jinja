{% extends "base.jinja" %}
{% set page_title = 'Upload Image' %}

{% block content %}
  <h3>Upload new File</h3>
  <img class="img-fluid picture" src="{{ image_url }}"/>

  <p>
    <form action="" method=post enctype=multipart/form-data>
      <p>
        <input type=file name=file>
        <input type=submit value=Upload>
      </p>
    </form>
  </p>
{% endblock %}
